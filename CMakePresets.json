{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev-basic",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ROLLNW_BUILD_BENCHMARKS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ROLLNW_BUILD_TOOLS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "dev-debug",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux",
            "displayName": "Default Config",
            "description": "Default build using Ninja",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "ROLLNW_BUILD_BENCHMARKS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "LUAU_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "linux-dev",
            "inherits": [
                "dev-basic",
                "linux"
            ],
            "displayName": "Linux Dev",
            "description": "Development build, including tests and benchmarks"
        },
        {
            "name": "linux-dev-debug",
            "inherits": [
                "dev-debug",
                "linux-dev"
            ]
        },
        {
            "name": "ci-codeql",
            "inherits": "linux",
            "displayName": "ci-codeql",
            "description": "CodeQL build",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ci-linux",
            "inherits": "linux",
            "displayName": "ci-linux",
            "description": "Default build with tests and code coverage, no python",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "ci-linux-clang",
            "inherits": "ci-linux",
            "displayName": "ci-linux-clang",
            "description": "CI Linux build using Clang (RelWithDebInfo)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "binaryDir": "${sourceDir}/build-ci-linux-clang",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "RelWithDebInfo"
                },
                "CMAKE_C_COMPILER": {
                    "type": "STRING",
                    "value": "clang"
                },
                "CMAKE_CXX_COMPILER": {
                    "type": "STRING",
                    "value": "clang++"
                }
            }
        },
        {
            "name": "ci-linux-clang-asan-ubsan",
            "inherits": "ci-linux-clang",
            "displayName": "ci-linux-clang-asan-ubsan",
            "description": "CI Linux Clang build with ASan+UBSan (RelWithDebInfo)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "binaryDir": "${sourceDir}/build-ci-linux-clang-asan-ubsan",
            "cacheVariables": {
                "ENABLE_SANITIZER_ADDRESS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_SANITIZER_UNDEFINED_BEHAVIOR": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "ci-linux-clang-fuzz",
            "inherits": "ci-linux-clang",
            "displayName": "ci-linux-clang-fuzz",
            "description": "CI Linux Clang build for fuzz targets (enabled in Week 2)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "binaryDir": "${sourceDir}/build-ci-linux-clang-fuzz"
            ,
            "cacheVariables": {
                "ROLLNW_BUILD_FUZZERS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "ci-linux-clang-bench",
            "inherits": "ci-linux-clang",
            "displayName": "ci-linux-clang-bench",
            "description": "CI Linux Clang build for benchmark canary (RelWithDebInfo)",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "binaryDir": "${sourceDir}/build-ci-linux-clang-bench",
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "ROLLNW_BUILD_BENCHMARKS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "ci-coverage-docs",
            "inherits": "linux",
            "displayName": "ci-coverage-docs",
            "description": "Default build with tests and code coverage, no python",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CODE_COVERAGE": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ROLLNW_BUILD_DOCS": {
                    "type": "BOOL",
                    "value": true
                },
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Debug"
                }
            }
        },
        {
            "name": "windows",
            "inherits": "linux",
            "generator": "Visual Studio 17 2022",
            "displayName": "Windows-only configuration",
            "description": "This build is only available on Windows",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-2019",
            "inherits": "windows",
            "generator": "Visual Studio 16 2019"
        },
        {
            "name": "windows-dev",
            "inherits": [
                "dev-basic",
                "windows"
            ],
            "displayName": "windows Dev",
            "description": "Development build, including tests and benchmarks"
        },
        {
            "name": "windows-dev-debug",
            "inherits": [
                "dev-debug",
                "windows-dev"
            ]
        },
        {
            "name": "windows-ninja-dev",
            "inherits": "windows-dev",
            "generator": "Ninja"
        },
        {
            "name": "windows-ninja-dev-debug",
            "inherits": [
                "windows-ninja-dev",
                "windows-dev-debug"
            ]
        },
        {
            "name": "windows-vs2019-dev",
            "inherits": "windows-dev",
            "generator": "Visual Studio 16 2019"
        },
        {
            "name": "windows-vs2019-dev-debug",
            "inherits": [
                "windows-vs2019-dev",
                "windows-dev-debug"
            ]
        },
        {
            "name": "ci-windows",
            "inherits": "windows",
            "generator": "Ninja",
            "displayName": "windows ci build",
            "description": "windows ci build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "macos",
            "inherits": "linux",
            "displayName": "macOS default configuration",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_OSX_DEPLOYMENT_TARGET": "13",
                "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
                "MI_OSX_ZONE": "OFF"
            }
        },
        {
            "name": "macos-dev",
            "inherits": [
                "dev-basic",
                "macos"
            ],
            "displayName": "macos Dev",
            "description": "Development build, including tests and benchmarks"
        },
        {
            "name": "macos-dev-debug",
            "inherits": [
                "dev-debug",
                "macos-dev"
            ]
        },
        {
            "name": "ci-macos",
            "inherits": "macos",
            "displayName": "macOS CI configuration",
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "dev-basic"
        },
        {
            "name": "debug",
            "configurePreset": "dev-debug"
        },
        {
            "name": "ci-linux-clang",
            "configurePreset": "ci-linux-clang"
        },
        {
            "name": "ci-linux-clang-asan-ubsan",
            "configurePreset": "ci-linux-clang-asan-ubsan"
        },
        {
            "name": "ci-linux-clang-fuzz",
            "configurePreset": "ci-linux-clang-fuzz"
        },
        {
            "name": "ci-linux-clang-bench",
            "configurePreset": "ci-linux-clang-bench"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "linux",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "ci-linux-clang",
            "configurePreset": "ci-linux-clang",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "ci-linux-clang-asan-ubsan",
            "configurePreset": "ci-linux-clang-asan-ubsan",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
